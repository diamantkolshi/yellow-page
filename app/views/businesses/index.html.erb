 <!-- Navigation -->   

    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">All businesses
                    <small>*****</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="index.html">Home</a>
                    </li>
                    <li class="active">All businesses</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
     
        <!-- Project One -->
        <% @businesses.each do |business| %>
            <div class="row">   
                <div class="col-md-7">
                 <% if business.logo.blank? %>
                   <%= image_tag "logos/businesses/nologo.png", width: "100%",:class => "img-responsive" %>
                 <% else %>
                   <%= image_tag business.logo_url, width: "80%",:class => "img-thumbnail"%>
                 <% end %>
                </div>
                <div class="col-md-5">
                    <h3><%= link_to business.name, business_path(business.id) %></h3>
                    <h4><% business.categories.each do |category| %>
                        | <%= category.name %> |
                        <% end %>
                    </h4>
                    <p><%= business.description %></p>
                    <%= link_to "View", "#" ,class: "btn btn-primary" %>
                </div>
            </div>
            <!-- /.row -->
            
            <hr>
        <% end %>

        
       

        <!-- Pagination -->
        <div class="row text-center">
            <div class="col-lg-12">
                <ul class="pagination">
                    <div class="digg_pagination">  
                        <%= will_paginate @businesses, :container => false %>
                    </div>
                </ul>
            </div>
        </div>
        <!-- /.row -->

        <hr>
        
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </footer>


    </div>
