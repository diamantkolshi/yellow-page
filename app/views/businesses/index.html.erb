<!doctype html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title></title> 

    <!-- toolkit styles -->
    <!-- /toolkit styles -->

</head>
<body>

<section class="filter">
    <div class="container">
            <div class="row">
                <div class="col-xs-6 center-block text-center view-title">
                    <h3>All Businesses</h3>
                    <h5 class="vert-offset-top-1">Your neighbourhood search engine YP.ca helps you easily access local listings for 1.5 million businesses across Canada.</h5>
                </div>
            </div>
            <div class="row vert-offset-top-6">
               
                <div class="col-xs-12">

                <% unless @businesses.blank? %>
                 <% @businesses.each do |business| %>
                    <div class="col-xs-4">
                        <div class="thumbnail">
                        <% if business.logo.blank? %>
                          <%= image_tag "nologo.png", width: "80%", height: "90px"%>
                        <% else %>
                          <%= image_tag business.logo_url, width: "80%", height: "90px"%>
                        <% end %>
                        <div class="caption">
                          <h4><%= business.name %></h4>
                          <h6><%= business.description %></h6>
                          <div class="vert-offset-top-2"></div>             
                          <ul class="list-inline likes-ul">
                            <li><span class="label label-default"><%= business.email %></span></li>
                          </ul>
                          <ul class="list-inline likes-ul pull-right">
                            <li><i class="fa fa-star" aria-hidden="true"></i><%= business.average_rate %></li>
                            <li><i class="fa fa-comment-o" aria-hidden="true"></i><%= Commontator::Thread.where(commontable_id: business.id).count %></li>
                          </ul>
                        </div>
                      </div>
                    </div>
                    <% end %>
                <% end %>   
                  <div class="row text-center">
                    <div class="col-lg-12">
                        <ul class="pagination">
                            <div class="digg_pagination">  
                                <%= will_paginate @businesses, :container => false %>
                            </div>
                        </ul>
                    </div>
                </div>
                </div>  
            </div>
    </div>
</section>



<section class="payment">
    <div class="container">
        <div class="row">
            
            <div class="col-md-6 text-center center-block">
                <h2>Easy and Secure</h2>
                <h5 class="vert-offset-top-2">The payment process with Module is always nice and comfortable process for your business.</h5>
                <ul class="list-inline payment-ul vert-offset-top-4">
                    <li><%= image_tag "visa.png" %></li>
                    <li><%= image_tag "mastercard.png" %></li>
                    <li><%= image_tag "maestro.png" %></li>
                    <li><%= image_tag "fla.png" %></li>
                    <li><%= image_tag "square.png" %></li>
                    <li><%= image_tag "paypal.png" %></li>
                </ul>
            </div>
        </div>
    </div>
</section>



    <!-- toolkit scripts -->

    <!-- /toolkit scripts -->

</body>
</html>
