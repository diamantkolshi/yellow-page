 <!-- Navigation -->   

    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">All businesses
                    <small>*****</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="index.html">Home</a>
                    </li>
                    <li class="active">All businesses</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
     
        <!-- Project One -->
        <% @businesses.each do |business| %>
            <div class="row">   
                <div class="col-md-7">
                 <% if business.logo.blank? %>
                    <%= image_tag "logos/businesses/nologo.png", width: "100%",:class => "img-responsive"%>
                 <% else %>
                  <%= image_tag "logos/businesses/"+business.name+"/"+business.logo, width: "100%",:class => "img-responsive"%>
                 <% end %>
                </div>
                <div class="col-md-5">
                    <h3><%= business.name %></h3>
                    <h4><% business.categories.each do |category| %>
                        | <%= category.name %> |
                        <% end %>
                    </h4>
                    <p><%= business.description %></p>
                    <%= link_to "View", '#' ,class: "btn btn-primary" %>
                </div>
            </div>
            <!-- /.row -->
            
            <hr>
        <% end %>

        

        <!-- Pagination -->
        <div class="row text-center">
            <div class="col-lg-12">
                <ul class="pagination">
                    <li>
                        <a href="#">&laquo;</a>
