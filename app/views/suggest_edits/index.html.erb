
<br><br>
<div class="div-center">
  
  <h4> Update business information </h4><br>
  <% if flash[:notice] %>

    <div class="alert alert-danger">        
       <%= flash[:notice] %><br>
    </div>

  <% end %>
  <%= simple_form_for(@edit, :url => url_for(:action => 'create', :controller => 'suggest_edits', id: @business_suggest_edit.id)) do |f|  %>
  <div class="checkbox">
    <%= f.input :business_closed, label: "The business is permanently closed!", input_html: { id: "permanent_closed" } %>
  </div>
  
  <hr>
  <div id="suggest_and_edit" class="div-center" >
    
    <h5 class="text-warning">NAME</h5>
    <%= f.input :name, autofocus: true, input_html: { value: @business_suggest_edit.name }, :class => 'form-control no-border' %>
    <br><h5 class="text-warning">ADDRESS INFORMATION</h5>
    
    <%= f.input :address, :class => 'form-control no-border' %>
    
    
    <%= f.input :zip_code, input_html: { value: @business_suggest_edit.zip_code }, :class => 'form-control no-border' %>
    
    <br><h5 class="text-warning">PHONE NUMBER</h5>
    <%= f.input :business_tel, :class => 'form-control no-border', input_html: { placeholder: "type, number" } %>

    
    <br><h5 class="text-warning">OPENING HOURS</h5>
    <%= f.input :opening_hours, input_html: { placeholder: "sogest for some working days" }, :class => 'form-control no-border' %>
    
    <br><h5 class="text-warning">WEBSITES</h5>
    <%= f.input :website, input_html: { value: @business_suggest_edit.website }, :class => 'form-control no-border' %>
    <%= f.input :facebook, input_html: { value: @business_suggest_edit.facebook, placeholder: "url www.facebook.com" }, :class => 'form-control no-border' %>
    <%= f.input :instagram, input_html: { value: @business_suggest_edit.instagram, placeholder: "url www.instagram.com" }, :class => 'form-control no-border' %>
    <%= f.input :google, input_html: { value: @business_suggest_edit.google,  placeholder: "your gmail " } , :class => 'form-control no-border' %>
    </div>
      <div class="pull-right">
    <%= link_to "cancel", business_path(@business_suggest_edit), html_options: { class: "btn" } %>
    <%= button_tag 'Submit', type: :submit, class: 'btn btn-primary' %>
    <%# f.button :button, "Submit" %>
  
    
  </div>
  <hr>

  <%end%>
</div>
<br><br>

<%= javascript_include_tag "dependent_fields" %>