
<br><br><br><br><br><br>

  <div class="main">
    <h3>Suggest your <a href="#">business</a></h3>
      <div class="login-or">
        <hr class="hr-or">
        <span class="span-or">+</span>
      </div>
      <%= simple_form_for(@suggest_business, url: suggest_businesses_path) do |f| %>
        <div class="form-inputs">
          <%= f.input :name, label: "Business name",required: true, autofocus: true %>
          <% if current_user %>
            <%= f.input :email, :input_html => { value: current_user.email },required: true %>
          <% else %>
            <%= f.input :email, required: true %>        
          <% end %>
          <%= f.input :tel, required: true %>
          <%= f.input :message, maxlength: 255 %>             
        
        </div><br><br>
        <div class="modal-footer">
          <%= link_to  "Cancel", root_path , html_options: { class: "btn" } %>   
          <%= f.button :submit, "Send", class: "btn-primary" %>   
        </div>      
      </div>                       
   </div>   
 <% end %>
</div>





