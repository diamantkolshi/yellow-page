
    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
               
                    <small>...</small>
    
                <ol class="breadcrumb">
                    <li><a href="<%= root_path %>">home</a>
                    </li>
                    <li class="active">Advanced</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <!-- Content Row -->
        <div class="row">

            <!-- Sidebar Column -->
            <div class="col-md-2">
                <div class="list-group">
                    <%= link_to "Multi Search", search_advanced_path, class: "list-group-item active" %>
                    <%= link_to "By Products", search_by_product_path, class: "list-group-item" %>
                </div>
            </div>

            <!-- Content Column -->
            <div class="col-md-9">
            

                <div id="login-overlay" class="modal-dialog">
                      <div class="modal-content">
                          <div class="modal-header">
                              <h4 class="modal-title" id="myModalLabel">Multi search</h4>
                            
                            </div>
                          
                    <div class="modal-body">
                                           
                    <%= form_tag("/search/index", method: "get", id: "registerForm" ) do %>                           
                        <div class="form-group">
                            <div class="form-group"> 
                                    <div class="col-xs-12">
                                        <label for="InputEmail">What?</label>
                                        <div class="input-group">
                                        <%= text_field_tag :multi, params[:multi], :required => true,class: "form-control", id: "business_search", placeholder: "e.g. Business name, email , category, post_code" , autocomplete: "off" %>

                                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                                    </div>
                                    
                                <br>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <label for="InputName">Address</label>
                                    <div class="input-group">
                                        <%= text_field_tag :address, params[:address], :required => true,class: "form-control", id: "business_search", placeholder: "e.g. address name" , autocomplete: "off" %>
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                                    </div>
                                        <br>
                                <hr>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">

                                <label for="InputName">City</label>
                                    <div class="input-group">
                                        <%= collection_select(:city_id, :city_id, City.all, :id, :name, {prompt: 'Select a city'}, {:class=>'form-control'}) %>
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                                    </div>
                                    
                                    <br>
                                <hr>
                                </div>       
                                </div>                             

                                <div class="form-group">
                                  <div class="input-group-addon">
                                    <%= button_tag(type: "submit", class: "btn btn-success pull-right") do %>
                                        Search <i class="fa fa-search"></i>
                                    <% end %>
                                  
                                  </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>


                <script type="text/javascript">

                </script>
                            
                </div>
        </div>
        <!-- /.row -->

        <hr>


    </div>
    <!-- /.container -->



 <script type="text/javascript">
   $(function() {
     $( "#address" ).autocomplete({
    <% address_name = Address.all %>
     source: [
      <% address_name.each do |a| %>
     { label: "<%= a.name %>", value: "<%= a.name %>" },
     <% end %>
     ]
     });
   });   
 </script>
