<%= render "layouts/header" %>
<br><br><br>
    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Advanced Search
                    <small>...</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="index.html">Home</a>
                    </li>
                    <li class="active">Advanced</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <!-- Content Row -->
        <div class="row">

            <!-- Sidebar Column -->
            <div class="col-md-2">
                <div class="list-group">
                    <%= link_to "Multi Search", search_advanced_path, class: "list-group-item" %>
                    <%= link_to "By Products", search_by_product_path, class: "list-group-item active" %>
                </div>
            </div>

            <!-- Content Column -->
            <div class="col-md-9">
            

                <div id="login-overlay" class="modal-dialog">
                      <div class="modal-content">
                            <div class="modal-header">
                              <h4 class="modal-title" id="myModalLabel">Search by product</h4>
                              <p>Please Register to Shop at <b>Yael's Everything Store</b>.
                                You will instantly receive hundreds of amazing shopping deals,  
                                or go back to our <a href="./index.jsp">main site</a>.</p>
                            </div>

                    <div class="modal-body">
                        <%= form_tag("/search/index", method: "get", id: "registerForm" ) do %>                   
                     
                             <div class="form-group">
                                <div class="form-group"> 
                                        <div class="col-xs-12">
                                            <label for="InputEmail">Products?</label>
                                            <div class="input-group">
                                            <input type="text" class="form-control" name="email" placeholder="e.g. products name, price" required>
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                                        </div>
                                        
                                    <br>
                                    </div>
                                </div>
                                

                                    <div class="form-group">
                                      <div class="input-group-addon">
                                      <input type="submit" name="submit" id="submit" value="Search" class="btn btn-success pull-right">
                                      
                                      </div>
                                    </div>
                        <% end %>
                    </div>
                </div>
            </div>                            
        </div>
    </div>
        <!-- /.row -->

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->


