 <div id="wrapper">
    <div class="join">Join Today</div>
            <div class="clr"></div>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <div class="forms">
                    
                     <%= f.input :email, autofocus: true,  placeholder: "Your email address"; %>
                     <%= f.input :password, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "Your password "; %>
                     <%= f.input :password_confirmation,  placeholder: "Again your password";  %>
                    
                    </div>
                 <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
                    <i class="icon-ok icon-white"></i> Create Account  
                <% end %>  or 
                        <%= link_to "Login", new_user_session_path %>
              <% end %>          
</div>  
    
    
    
    
    